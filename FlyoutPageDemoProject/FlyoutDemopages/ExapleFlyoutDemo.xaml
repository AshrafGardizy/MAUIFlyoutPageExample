<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlyoutPageDemoProject.FlyoutDemopages.ExapleFlyoutDemo"
             Title="ExapleFlyoutDemo"
            FlyoutLayoutBehavior="Popover">

    <FlyoutPage.Flyout>
        <ContentPage Title="Flyout Example" BackgroundColor="Tomato">
            <VerticalStackLayout>
                <Label Text="This is an Item" TextColor="White"
                       FontSize="24"
                       HorizontalTextAlignment="Center" Margin="10" />
            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage Title="Details" BackgroundColor="Firebrick">
                    <VerticalStackLayout>
                        <Label Text="This is an Item details" TextColor="White"
                                FontSize="24"
                                HorizontalTextAlignment="Center" Margin="10" />
                    </VerticalStackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>